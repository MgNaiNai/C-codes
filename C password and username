#include <stdio.h>
#include <string.h>

int main(){


    char uLoginName[10];
    char uLoginPassword[20];
    char uSignInName[10];
    char uSignInPassword[20];
    char Signin[0];
    int num=0;

    printf("Welcome to our program\n");
    printf("Press 1 to Login!\n");
    printf("Press 2 to SignIn!\n");
    scanf("%d",&num);

    if (1==num){
        printf("Type your name to Login:");
        scanf("%s",&uLoginName);
        printf("Enter Password:");
        scanf("%s",&uLoginPassword);
        printf("Your name is %s \nYour password is %s ",uLoginName,uLoginPassword);

    }else if (2==num){
        printf("Type your name to SigIn:");
        scanf("%s",&uSignInName);
        printf("Create Pawword:");
        scanf("%s",&uSignInPassword);
        printf("Your name is %s \nYour password is %s ",uSignInName,uSignInPassword);
    }

    return 0;
}
